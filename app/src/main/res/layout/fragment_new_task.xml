<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/FabColor"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.remainme.remaindme.Fragments.NewTaskFragment">

    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common16dp"
            android:layout_marginTop="@dimen/common16dp"
            android:layout_marginLeft="@dimen/common16dp"
            android:padding="@dimen/common10dp"
            android:text="Create"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common16dp"
            android:layout_marginLeft="@dimen/common16dp"
            android:padding="@dimen/common10dp"
            android:text="New Task"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text20sp"
            />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common16dp"
                android:padding="@dimen/common10dp"
                android:textColor="@color/colorPrimary"
                android:hint="Name"
                android:textSize="@dimen/text20sp"
                />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_container"
        app:cardCornerRadius="30dp"
        android:layout_marginBottom="-30dp">

    </android.support.v7.widget.CardView>

</RelativeLayout>