<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.remainme.remaindme.MainActivity">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/list-hariz"
    android:padding="5dp"
    android:layout_margin="5dp">
    <LinearLayout
        android:id="@+id/top"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <android.support.v7.widget.CardView
            android:id="@+id/top-card"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_margin="7dp"
            app:cardBackgroundColor="#5b9ef0"
            app:cardCornerRadius="20dp"
            android:clipToPadding="true">
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/schedule_icon"
            android:layout_gravity="center"
            android:background="#5b9ef0"
            android:src="@drawable/ic_schedule_black_34dp"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/today"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"/>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</FrameLayout>

    <FrameLayout
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/list-hariz"
        android:layout_marginTop="132dp"
        android:padding="4dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/task"
            android:padding="4dp"
            android:layout_margin="4dp"/>
        <LinearLayout
            android:id="@+id/list_cat"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="23dp"
            android:layout_below="@+id/top"
            >
            <android.support.v7.widget.CardView
                android:id="@+id/list-card"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_margin="7dp"
                android:padding="4dp"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="10dp"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:text="@string/title"
                android:padding="3dp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                />
             <ImageButton
                 android:id="@+id/varity"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/ic_schedule_black_24dp"
                 android:background="#ffffff"
                 android:layout_gravity="center_vertical"
                 android:layout_marginLeft="5dp"/>

                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/today"
                    android:layout_marginLeft="38dp"
                    android:layout_gravity="center_vertical"/>
                 <LinearLayout
                     android:id="@+id/status"
                     android:layout_width="fill_parent"
                     android:layout_height="20dp"
                     android:layout_alignTop="@+id/type"
                     android:orientation="horizontal"
                     android:layout_marginTop="70dp"
                     android:layout_marginLeft="6dp"
                     android:layout_marginRight="5dp"
                     android:padding="2dp"
                     android:gravity="center_vertical"
                     >
                     <TextView
                         android:id="@+id/done"
                         android:layout_height="20dp"
                         android:layout_width="110dp"
                         android:text="@string/done"
                         android:layout_gravity=""/>
                     <TextView
                         android:id="@+id/not_done"
                         android:layout_height="20dp"
                         android:layout_width="105dp"
                         android:text="@string/not_done"
                         android:textAlignment="center"/>
                     <TextView
                         android:id="@+id/later"
                         android:layout_height="20dp"
                         android:layout_width="100dp"
                         android:text="@string/later"
                         android:textAlignment="textEnd"/>

                 </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
